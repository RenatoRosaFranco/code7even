<p id="notice"><%= notice %></p>

<h1>Dashboard Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Content</th>
      <th>Published</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dashboard_posts.each do |dashboard_post| %>
      <tr>
        <td><%= dashboard_post.title %></td>
        <td><%= dashboard_post.description %></td>
        <td><%= dashboard_post.content %></td>
        <td><%= dashboard_post.published %></td>
        <td><%= dashboard_post.tags %></td>
        <td><%= link_to 'Show', dashboard_post %></td>
        <td><%= link_to 'Edit', edit_dashboard_post_path(dashboard_post) %></td>
        <td><%= link_to 'Destroy', dashboard_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dashboard Post', new_dashboard_post_path %>
